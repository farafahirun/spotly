<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat tombol dipilih (selected) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/utama_soft"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/utama"/>
        </shape>
    </item>
    <!-- State default (tidak dipilih) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/bottom_off"/>
        </shape>
    </item>
</selector>